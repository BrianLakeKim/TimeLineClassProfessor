<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180px"
        android:layout_marginLeft="100px">

        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_gravity="left"
            android:src="@drawable/logogreen">
        </ImageView>

    </LinearLayout>


    <TextView
        android:layout_marginTop="25px"
        android:layout_marginLeft="180px"
        android:layout_width="820px"
        android:layout_height="200px"
        android:fontFamily="@font/font_r"
        android:text="회원가입"
        android:textSize="150px"
        android:textColor="@color/green">
    </TextView>

    <EditText
        android:layout_width="1100px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="text"
        android:ems="15"
        android:hint="ID"
        android:background="@drawable/border2"
        android:id="@+id/registerid">
        <!-- id값: registertext -->
    </EditText>

    <EditText
        android:layout_marginTop="30px"
        android:layout_width="1100px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="15"
        android:background="@drawable/border"
        android:id="@+id/registerpassword">
        <!-- id값: registerpassword -->
    </EditText>


    <TextView
        android:layout_width="500px"
        android:layout_height="60px"
        android:layout_marginTop="70px"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/font_l"
        android:textColor="@color/green"
        android:textSize="50px"
        android:text="주의사항">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="1100px"
            android:layout_height="1050px"
            android:background="@drawable/border2"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            android:fontFamily="@font/font_l"
            android:textColor="#4f9d00"
            android:text="\n\t계정의 분실에 유의해주세요 \n\n\t본사는 본인의 부주의에 의한 도용에 \n\t책임을 지지 않습니다">
        </TextView>

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px"
        android:layout_width="400px"
        android:layout_height="150px"
        android:background="@drawable/buttonborderblue"
        android:textAlignment="center"
        android:fontFamily="@font_l"
        android:textColor="@color/white"
        android:text="회원가입"
        android:id="@+id/registerbtn">
        <!-- id값: registerbtn -->
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="70px"
            android:fontFamily="@font/font_l"
            android:text="2022 TimeLineClass TeamProject"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="30px">
        </TextView>

        <!-- 로그인 화면 : 2022TimeLineClass TeamProject 글자 -->
        <!-- 속성 : 높이:40px, 마진top:400px, 나눔스퀘어l, 텍스트 중앙정렬, 사이즈30px -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/font_l"
            android:text="Design By Kim Jong Ok"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="28px">
        </TextView>

    </LinearLayout>




</LinearLayout>