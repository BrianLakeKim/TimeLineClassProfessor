<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#222222"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <!-- 카드뷰 시작 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- L1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- L1-1 -->

            <TextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/font_l"
                android:text="이름"
                android:layout_margin="10dp"/>


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30px"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginBottom="10dp"
                android:background="@drawable/xbutton"
                android:id="@+id/deleteCardView">
                <!-- '삭제 버튼' : id값:deleteCardView -->
            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/videoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/font_l"
            android:text="타임마커"
            android:textColor="#6dd900" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>